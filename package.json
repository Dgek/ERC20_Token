{
    "name": "token_erc777",
    "version": "0.0.1",
    "description": "ERC777 and ERC1156 tokens",
    "main": "truffle.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "setup": "nvm alias default lts/erbium && nvm use default && npm i && npm audit fix",
        "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c 'contracts/**/*.sol'",
        "lint:sol:fix": "prettier --write \"contracts/**/*.sol\"",
        "truffle-abi-Token": "mkdir -p ./bin && cat build/contracts/ERC777_Token.json | jq -c .abi > ./bin/ERC777_Token.abi",
        "truffle-abi-TokenV2": "mkdir -p ./bin && cat build/contracts/ERC777_Tokenv2.json | jq -c .abi > ./bin/ERC777_TokenV2.abi",
        "truffle-abi-TokenV3": "mkdir -p ./bin && cat build/contracts/ERC777_Tokenv3.json | jq -c .abi > ./bin/ERC777_TokenV3.abi",
        "compile": "truffle compile",
        "re-compile-all": "truffle compile --all",
        "flatten-Token": "truffle-flattener ./contracts/ERC777_Token.sol > ./flattened/ERC777_Token.sol",
        "flatten-TokenV2": "truffle-flattener ./contracts/ERC777_TokenV2.sol > ./flattened/ERC777_TokenV2.sol",
        "ganache": "ganache-cli -i 1111 -a 10",
        "ganache-devnet": "ganache-cli -i 1111 -a 10 -d -m 'stomach wage stem judge control beauty glue chapter cannon kitchen pilot orbit'",
        "eth-migrate-local": "truffle migrate --network local",
        "eth-migrate-testnet": "truffle migrate --network testnet",
        "matic-migrate-testnet": "truffle migrate --network matic_testnet",
        "matic-migrate-mainnet": "truffle migrate --network matic_mainnet",
        "solana-migrate-devnet": "truffle migrate --network solana_devnet --reset",
        "solana-migrate-testnet": "truffle migrate --network solana_testnet",
        "solana-migrate-mainnet": "truffle migrate --network solana_mainnet",
        "solium": "solium -d contracts/ --fix",
        "eth-test-token-local": "truffle test ./test/token/TestToken.js --network local",
        "eth-test-multi-token-local": "truffle test ./test/token/TestMultiToken.js --network local",
        "matic-test-token-testnet": "truffle test ./test/token/TestToken.js --network matic_testnet",
        "matic-test-multi-token-testnet": "truffle test ./test/token/TestMultiToken.js --network matic_testnet",
        "sol-test-token-devnet": "truffle test ./test/token/TestToken.js --network solana_devnet",
        "sol-test-multi-token-devnet": "truffle test ./test/token/TestMultiToken.js --network solana_devnet",
        "clean": "rm -rf ./build && rm -rf ./bin/*",
        "---------- EXTERNAL TESTS ----------": "",
        "nodejs-devnet": "node scripts/devnet.js",
        "nodejs-matic-testnet": "node scripts/testnet.js matic_testnet"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PaTiToMaSteR/ERC777_Token"
    },
    "author": "Alvaro Martin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PaTiToMaSteR/ERC777_Token/issues"
    },
    "homepage": "https://github.com/PaTiToMaSteR/ERC777_Token#readme",
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@openzeppelin/contracts-upgradeable": "^4.3.2",
        "@openzeppelin/test-helpers": "^0.5.13",
        "@openzeppelin/truffle-upgrades": "^1.9.1",
        "@truffle/abi-utils": "^0.2.4",
        "@truffle/hdwallet-provider": "^1.5.0",
        "dotenv": "^10.0.0",
        "ganache-cli": "^6.12.2",
        "prettier": "^2.3.0",
        "prettier-plugin-solidity": "^1.0.0-beta.16",
        "solc": "^0.8.7-fixed",
        "solhint": "^3.3.6",
        "solidity-coverage": "^0.7.17",
        "solium": "^1.2.5",
        "truffle": "^5.4.10",
        "truffle-flattener": "^1.5.0"
    }
}