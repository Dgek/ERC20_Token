{
    "name": "token_erc20",
    "version": "0.0.1",
    "description": "ERC20 Token and ERC20 IDO",
    "main": "truffle.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "setup": "nvm alias default lts/erbium && nvm use default && npm i && npm audit fix",
        "lint:sol": "solhint 'contracts/**/*.sol' && prettier -c 'contracts/**/*.sol'",
        "lint:sol:fix": "prettier --write \"contracts/**/*.sol\"",
        "truffle-abi-ERC20": "mkdir -p ./bin && cat build/contracts/ERC20.json | jq -c .abi > ./bin/ERC20.abi",
        "truffle-abi-ERC20_Token": "mkdir -p ./bin && cat build/contracts/ERC20_Token.json | jq -c .abi > ./bin/ERC20_Token.abi",
        "truffle-abi-ERC20_IDO": "mkdir -p ./bin && cat build/contracts/ERC20_IDO.json | jq -c .abi > ./bin/ERC20_IDO.abi",
        "compile": "truffle compile",
        "re-compile-all": "truffle compile --all",
        "flatten-ERC20_Token": "truffle-flattener ./contracts/ERC20_Token.sol > ./flattened/ERC20_Token.sol",
        "flatten-ERC20_IDO": "truffle-flattener ./contracts/ERC20_IDO.sol > ./flattened/ERC20_IDO.sol",
        "ganache": "ganache-cli -i 2222 -a 10",
        "ganache-devnet": "ganache-cli -i 2222 -a 10 -d -m 'stomach wage stem judge control beauty glue chapter cannon kitchen pilot orbit'",
        "---------- LOCAL MIGRATION ----------": "",
        "eth-migrate-local": "truffle migrate --network local --reset",
        "---------- LOCAL TEST ----------": "",
        "eth-test-token-local": "truffle test ./test/token/TestToken.js --network local",
        "eth-test-multi-token-local": "truffle test ./test/token/TestMultiToken.js --network local",
        "---------- DEVNET MIGRATION ----------": "",
        "solana-migrate-devnet": "truffle migrate --network solana_devnet --reset",
        "---------- DEVNET TEST ----------": "",
        "solana-test-token-devnet": "truffle test ./test/token/TestToken.js --network solana_devnet",
        "solana-test-multi-token-devnet": "truffle test ./test/token/TestMultiToken.js --network solana_devnet",
        "---------- TESTNET MIGRATION ----------": "",
        "eth-migrate-testnet": "truffle migrate --network testnet --reset",
        "matic-migrate-testnet": "truffle migrate --network matic_testnet --reset",
        "solana-migrate-testnet": "truffle migrate --network solana_testnet --reset",
        "harmony-migrate-testnet": "truffle migrate --network harmony_testnet --reset",
        "bsc-migrate-testnet": "truffle migrate --network bsc_testnet --reset",
        "---------- TESTNET TEST ----------": "",
        "eth-test-token-testnet": "truffle test ./test/token/TestToken.js --network testnet --compile-none",
        "eth-test-multi-token-testnet": "truffle test ./test/token/TestMultiToken.js --network testnet --compile-none",
        "matic-test-token-testnet": "truffle test ./test/token/TestToken.js --network matic_testnet",
        "matic-test-multi-token-testnet": "truffle test ./test/token/TestMultiToken.js --network matic_testnet",
        "harmony-test-token-testnet": "truffle test ./test/token/TestToken.js --network harmony_testnet",
        "harmony-test-multi-token-testnet": "truffle test ./test/token/TestMultiToken.js --network harmony_testnet",
        "bsc-test-token-testnet": "truffle test ./test/token/TestToken.js --network bsc_testnet",
        "bsc-test-multi-token-testnet": "truffle test ./test/token/TestMultiToken.js --network bsc_testnet",
        "---------- MAINNET MIGRATION ----------": "",
        "matic-migrate-mainnet": "truffle migrate --network matic_mainnet",
        "solana-migrate-mainnet": "truffle migrate --network solana_mainnet",
        "solium": "solium -d contracts/ --fix",
        "clean": "rm -rf ./build && rm -rf ./bin/*",
        "---------- EXTERNAL TESTS ----------": "",
        "nodejs-devnet": "node scripts/devnet.js",
        "nodejs-matic-testnet": "node scripts/testnet.js matic_testnet"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PaTiToMaSteR/ERC777_Token"
    },
    "author": "Alvaro Martin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PaTiToMaSteR/ERC777_Token/issues"
    },
    "homepage": "https://github.com/PaTiToMaSteR/ERC777_Token#readme",
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@openzeppelin/contracts": "^4.4.1",
        "@openzeppelin/test-helpers": "^0.5.15",
        "@openzeppelin/truffle-upgrades": "^1.10.0",
        "@truffle/abi-utils": "^0.2.4",
        "@truffle/hdwallet-provider": "^1.5.0",
        "dotenv": "^10.0.0",
        "ganache-cli": "^6.12.2",
        "prettier": "^2.3.0",
        "prettier-plugin-solidity": "^1.0.0-beta.16",
        "solc": "^0.8.7-fixed",
        "solhint": "^3.3.6",
        "solidity-coverage": "^0.7.17",
        "solium": "^1.2.5",
        "truffle": "^5.4.16",
        "truffle-flattener": "^1.5.0"
    }
}
